<h1>本情報編集</h1>

<%= form_with model:@card do |f|%>
    <table>
        <tr>
            <th><%= f.label:title,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
         <tr>
            <th><%= f.label:author,"著者" %></th>
            <td><%= f.text_field :author %></td>
        </tr>
         <tr>
            <th><%= f.label:price,"値段" %></th>
            <td><%= f.text_field :price %></td>
        </tr>
         <tr>
            <th><%= f.label:publisher,"出版社" %></th>
            <td><%= f.text_field :publisher %></td>
        </tr> <tr>
            <th><%= f.label:memo,"メモ," %></th>
            <td><%= f.text_field :memo %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit"編集完了" %></li>
            <li><%= link_to"一覧に戻る" ,:cards %></li>
            <li><%= link_to "削除",f,method:delete,date:{confirm:"本当に削除しますか？"} %></li>
        </ul>
    </div>
    <% end %>
